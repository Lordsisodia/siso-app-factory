{
  "name": "siso-app-factory",
  "version": "1.0.0",
  "type": "module",
  "description": "SISO App Factory - Universal UI & Feature Library for Infinite Scalability",
  "private": true,
  "workspaces": [
    "packages/platform/*",
    "packages/experiences/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "clean": "npm run clean --workspaces",
    "generate:metadata": "node tools/core/generate-metadata.cjs",
    "search": "node tools/core/ai-search.cjs",
    "tools:import": "node tools/core/component-import/bulk-import.cjs",
    "tools:recategorize": "node tools/core/component-import/recategorize-misc.cjs",
    "tools:lf:init": "node tools/observability/scripts/langfuse-init.js",
    "tools:lf:track": "node tools/observability/scripts/langfuse-track-generation.js",
    "tools:lf:finish": "node tools/observability/scripts/langfuse-finish.js",
    "tools:lf:test": "node tools/observability/scripts/langfuse-test.js",
    "ui:verify": "node tools/automation/check-ui-non-negotiables.mjs",
    "roi:verify": "node tools/automation/check-roi-metrics.mjs",
    "compliance:verify": "pnpm ui:verify && pnpm roi:verify",
    "scaffold:domain": "cd project-setup-system && ts-node scripts/scaffold-domain.ts",
    "security:scan": "node tools/security/run-scan.js",
    "prompt:audit": "node tools/security/prompt-audit.js",
    "test:full": "npm run test --workspaces",
    "prompt:log": "ts-node project-setup-system/scripts/log-prompt-version.ts",
    "update:build-checklists": "cd project-setup-system && ts-node scripts/update-build-checklists.ts",
    "check:drift": "ts-node scripts/check-drift.ts",
    "setup:jtbd": "node project-setup-system/scripts/checklist.mjs setup:jtbd",
    "setup:status": "node project-setup-system/scripts/checklist.mjs setup:status",
    "discovery:refresh": "node project-setup-system/scripts/checklist.mjs discovery:refresh",
    "phase3:ac": "node project-setup-system/scripts/checklist.mjs phase3:ac",
    "prd:shard": "node project-setup-system/scripts/checklist.mjs prd:shard",
    "arch:compile": "node project-setup-system/scripts/checklist.mjs arch:compile",
    "validate": "node project-setup-system/scripts/checklist.mjs validate",
    "spec:verify": "node project-setup-system/scripts/checklist.mjs spec:verify",
    "prd:diff": "node project-setup-system/scripts/checklist.mjs prd:diff",
    "mcp:init": "node project-setup-system/scripts/checklist.mjs mcp:init",
    "po:report": "node project-setup-system/scripts/checklist.mjs po:report",
    "logs:append": "node project-setup-system/scripts/checklist.mjs logs:append",
    "status:complete": "node project-setup-system/scripts/checklist.mjs status:complete",
    "workspace:check": "node project-setup-system/scripts/workspace-check.mjs",
    "ci:gate": "node project-setup-system/scripts/ci-gate.mjs",
    "telemetry:report": "node tools/telemetry/report.mjs",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open"
  },
  "keywords": [
    "ui-library",
    "component-library",
    "feature-library",
    "restaurant",
    "tour-guide",
    "bike-rental"
  ],
  "devDependencies": {
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "langfuse": "^3.38.6",
    "yaml": "^2.3.4"
  }
}
